<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta charset="utf-8">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="nav navbar-header">
            <h3><font color="white">Bookers</font></h3>
          </div>

          <div class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <ul class="nav navbar-nav">
              <li><%= link_to user_path(current_user.id) do %>
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                <span>Home</span>
                <% end %>
              </li>
              <li><%= link_to users_path do %>
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                <span>Users</span>
                <% end %>
              </li>
              <li><%= link_to books_path do %>
                <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
                <span>Books</span>
                <% end %>
              </li>
              <li><%= link_to destroy_user_session_path, method: :delete do %>
                <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                <span>logout</span>
                <% end %>
              </li>
            </ul>
            <% else %>
            <ul class="nav navbar-nav">
            <li><%= link_to root_path do %>
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                <span>Home</span>
                <% end %>
            </li>
            <li><%= link_to home_about_path do %>
                <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
                <span>About</span>
                <% end %>
            </li>
            <li><%= link_to new_user_registration_path do %>
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                <span>sign up</span>
                <% end %>
            </li>
            <li><%= link_to new_user_session_path do %>
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
                <span>login</span>
                <% end %>
            </li>
            </ul>
            <% end %>
          </div>
       </div>
      </nav>
    </header>
    <%= yield %>
    <div id="container">
        <div id="theTarget">
          <div class="image1"></div>
          <div class="image2"></div>
          <div class="image3"></div>
          <div class="image4"></div>
          <div class="image5"></div>
        </div>
      </div>
  </body>
</html>
