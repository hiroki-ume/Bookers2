<div class="container">
	<div class="row">
		<%= flash[:success] %>
		<%= flash[:notice] %>
		<%= render 'books/list', book: @new_book, user: @current_user %>
		<div class="col-xs-9">
			<h1>Book detail</h1>
			<table class="table table-default">
				<tr>
					<td>
						<%= link_to user_path(@book.user.id) do %>
						<%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg",size: "40x40" %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td>
						<%= @book.title %>
					</td>
					<td>
						<%= @book.body %>
					</td>
					<td>
					<%= render "favorite", book: @book %>
				</td>
					<% if current_user.id == @book.user.id %>
					<td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
					<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-danger" %></td>
					<% end %>
				</tr>
			</table>
			<h2>Comments</h2>
			<table class="table table-striped">
				<% @book.comments.each do |comment| %>
				<tr>
					<th><%= link_to comment.user.name, user_path(comment.user) %></th>
					<td><%= comment.content %></td>
				</tr>
				<% end %>
			</table>
				<br>
				<h2>Post comment</h2>
			<%= render "comments/comment", comment: @comment %>
		</div>
	</div>
</div>
