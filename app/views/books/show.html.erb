<div class="container">
	<div class="row">
		<%= flash[:success] %>
		<%= render 'books/list', book: @book, user: @user %>
		<div class="col-lg-9">
			<h1>Book detail</h1>
			<table class="table table-default">
				<tr>
					<td>image</td>
					<td><%= @book.title %></td>
					<td><%= @book.body %></td>
					<td><%= link_to "Edit", edit_book_path(@book.id) %></td>
					<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
				</tr>
			</table>
		</div>
	</div>
</div>