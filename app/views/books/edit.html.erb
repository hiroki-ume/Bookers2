<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title, size: 75 %>
				<h4>Opinion</h4>
				<%= f.text_area :body, size: "74x3" %><br>
				<%= f.submit 'Update Book', class:"btn btn-primary btn-block" %>
				<%= link_to "Show", book_path(@book) %>
				|
				<%= link_to "Back", books_path%>
			<% end %>
				<div class="container">
					<div class="row">
						<div class="col-xs-6 col-xs-offset-6">
							<p>Copyright infratop.inc</p>
						</div>
					</div>
				</div>
		</div>
	</div>
</div>