<div class="container">
	<div class="row">
		<%= render 'books/list', book: @book, user: @user %>
			<div class="col-lg-8">
						<h1>Books</h1>
						<table class="table table-striped">
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
						<% @books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "40x40" %></td>
							<td><%= link_to "#{book.title}", book_path(book.id) %></td>
							<td><%= book.body %></td>
						</tr>
						<% end %>
						</table>
				</div>
			
		</div>
	</div>
</div>

			
