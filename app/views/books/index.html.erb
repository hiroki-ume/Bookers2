<div class="container">
	<div class="row">
		<% if @book.errors.any? %>
		<ul>
			<h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
		<% end %>
		<%= render 'books/list', book: @book, user: @user %>
			<div class="col-xs-9">
						<h1>Books</h1>
						<table class="table table-default, table-hover">
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
						<% @books.each do |book| %>
						<tr>
							<td><%= link_to user_path(book.user.id) do %>
								<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "40x40" %>
								<% end %></td>
							<td><%= link_to "#{book.title}", book_path(book.id) %></td>
							<td><%= book.body %></td>
						</tr>
						<% end %>
						</table>
				</div>
			
		</div>
	</div>
</div>

			
