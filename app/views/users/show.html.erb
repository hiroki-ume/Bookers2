<div class="container">
	<div class="row">
		<%= render 'users/list', book: @book, user: @user %>
		<div class="col-lg-8">
			<h1>Books</h1>
			<table class="table table-default">
				<tr>
					<th>Image</th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
				<tr>
					<td></td>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
